<VirtualHost *:80>

    <IfModule mod_proxy.c>
        ProxyRequests     Off

        <Proxy http://localhost:{{app_http_port | default('8080')}}/*>
            Order deny,allow
            Allow from all
        </Proxy>

        ProxyPass         /  http://localhost:{{app_http_port | default('8080')}}/
        ProxyPassReverse  /  http://localhost:{{app_http_port | default('8080')}}/
    </IfModule>
</VirtualHost>
